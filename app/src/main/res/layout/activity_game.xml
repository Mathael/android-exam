<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.morpion.activities.GameActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Au tour de "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_static_top"
                android:layout_weight="1"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_name"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid_game"
            android:columnCount="3"
            android:useDefaultMargins="true">

            <ImageView
                android:id="@+id/case_1"
                android:tag="1"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose"/>

            <ImageView
                android:id="@+id/case_2"
                android:tag="2"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_3"
                android:tag="3"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_4"
                android:tag="4"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_5"
                android:tag="5"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_6"
                android:tag="6"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_7"
                android:tag="7"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_8"
                android:tag="8"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />

            <ImageView
                android:id="@+id/case_9"
                android:tag="9"
                android:layout_height="100dp"
                android:background="@android:color/darker_gray"
                android:layout_columnWeight="1"
                android:onClick="choose" />
        </GridLayout>

        <Button
            android:text="Nouvelle partie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_restart"
            android:onClick="restart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_win"
            android:textAlignment="center" />
    </LinearLayout>

</RelativeLayout>
